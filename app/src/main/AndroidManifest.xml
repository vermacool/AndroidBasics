<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sked.androidbasics">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TestActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Form2"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".FormActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BrowserActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".musicplayer.Library"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".StringOperationsActivity"
            android:label="@string/title_activity_string_operations"
            android:parentActivityName=".MainActivity" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_maps"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".LocationActivity"
            android:label="@string/title_activity_location"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Name" />
        <activity
            android:name=".GetResult"
            android:label="@string/title_activity_get_result"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ReturnResult"
            android:label="@string/title_activity_return_result"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".JavaBasicsActivity"
            android:label="@string/title_activity_java_basics" />

        <service
            android:name=".MyService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".CredentialActivity"
            android:label="@string/title_activity_credential" />
        <activity
            android:name=".Alerts"
            android:label="@string/title_activity_alerts" />
        <activity
            android:theme="@style/AppTheme"
            android:name=".ScrollingActivity"
            android:label="@string/title_activity_scrolling" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="02116b0439cd53de1245ee2a6293f604e3a4c5fd" />

        <activity
            android:name=".CaptureActivity"
            android:label="@string/title_activity_capture" />
        <activity
            android:name=".Counter"
            android:label="@string/title_activity_counter" />
        <activity
            android:name=".PopUpActivity"
            android:label="@string/title_activity_pop_up"></activity>
    </application>

</manifest>
